{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <h1>Admin index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    <a href="{{ path('admin_changeRole', {'id': user.id}) }}" class="btn btn-warning">Changer le role</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'utilisateur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}